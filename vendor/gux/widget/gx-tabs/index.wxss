@import "/vendor/gux/gux.wxss";

view.horizontal {
  overflow: auto;
  overflow-y: hidden;
  display: flex;
  flex-wrap: nowrap; 
}

view.sticky-top {
  position: sticky;
  top: 0;
}

.tabs {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  font-size: 16px;
  white-space: nowrap;
  z-index: 99;
}

.tab-item {
  margin: 0 36rpx;
  display: inline-block;
}

.tab-item.active {
  color: var(--color-primary);
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 90%;
  background: #4675F9;
  position: absolute;
  bottom: 0;
  left: 5%;
  border-radius: 16rpx;
}

.item-ans {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
  height: 180rpx;
  align-items: center;
  border-bottom: 1px solid #F2F2F2;
}

.tab-content {
  margin-top: 80rpx;
}

.scoll-h {
  height: 100%;
}