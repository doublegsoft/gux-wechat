<view class="dialog" hidden="{{!isOpen}}">
  <view class="bottom-dialog" animation="{{animationData}}" style="height: 40vh;">
    <view class="bottom-dialog-title">
      <a style="color: var(--color-error); font-size: 16px; position: absolute; top: 12px; left: 15px;" 
      bindtap="onHide">关闭</a>
      <text>{{title}}</text>
      <a style="color: var(--color-success); font-size: 16px; position: absolute; top: 12px; right: 15px;" 
      bindtap="onConfirm">确定</a>
    </view>
    <view class="bottom-dialog-body" style="padding-top: 12px;">
      <canvas bindtouchstart='start' bindtouchmove='move' bindtouchend='end' style="width:{{canvasWidth}}px;height:{{canvasHeight}}px;" id="{{canvasId}}" canvas-id="{{canvasId}}" disable-scroll='true'></canvas>
    </view>
  </view>
</view>
<slot></slot>