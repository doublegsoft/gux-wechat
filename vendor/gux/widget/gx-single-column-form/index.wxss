.c-switch {
  display: inline-block;
  width: 56px;
  height: 30px;
}

.c-switch-input {
  display: none;
}

.c-switch-slider {
  position: relative;
  display: block;
  height: inherit;
  cursor: pointer;
  background-color: #fff;
  border: 1px solid #c8ced3;
  transition: .15s ease-out;
  border-radius: 0.25rem;
}

.c-switch-slider::before {
  position: absolute;
  top: 2px;
  left: 4px;
  box-sizing: border-box;
  width: 26px;
  height: 26px;
  content: "";
  background-color: #fff;
  border: 1px solid #c8ced3;
  transition: .15s ease-out;
  border-radius: 0.125rem;
}

.c-switch-input:disabled .c-switch-slider {
  cursor: not-allowed;
  opacity: .5;
}

.c-switch-label {
  width: 64px;
}

.c-switch-label .c-switch-slider::before {
  z-index: 2;
}

.c-switch-label .c-switch-slider::after {
  position: absolute;
  top: 50%;
  right: 1px;
  z-index: 1;
  width: 50%;
  margin-top: -.5em;
  font-size: 12px;
  font-weight: 600;
  line-height: 1;
  color: #c8ced3;
  text-align: center;
  text-transform: uppercase;
  content: attr(data-unchecked);
  transition: inherit;
}

.c-switch-slider.checked::before {
  transform: translateX(30px);
}

.c-switch-slider.checked::after {
  left: 1px;
  color: #fff;
  content: attr(data-checked);
}

.c-switch-slider.checked {
  background-color: var(--color-info);
  border-color: var(--color-info);
}

.c-switch-slider.checked::before {
  border-color: var(--color-info);
}

.c-switch-pill .c-switch-slider {
  border-radius: 50em;
}

.c-switch-pill .c-switch-slider::before {
  border-radius: 50em;
}

