
.navigable-page {
  height: 100vh;
  text-align: center;
}

.wrapper button {
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}

.loader {
  position: fixed;
  z-index: 999999;
  top: 0;
  left: 0;
  width: 0;
  height: 100vh;
  transition: width 0s 1.4s ease;
}

.loader __icon {
  position: absolute;
  z-index: 1;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  opacity: 0;
  transition: opacity 0.5s ease;
}

.loader __icon svg {
  transform-origin: 0 0;
}

.navigable-page-tile {
  position: absolute;
  left: 0;
  width: 0;
  height: 20%;
  z-index: 99;
  background-color: #4c83f0;
  transition: width 0.7s ease;
}

.navigable-page-tile:nth-child(0) {
  top: -20%;
  transition-delay: -0.2s;
}

.navigable-page-tile:nth-child(1) {
  top: 0;
  transition-delay: 0s;
}

.navigable-page-tile:nth-child(2) {
  top: 20%;
  transition-delay: 0.2s;
}

.navigable-page-tile:nth-child(3) {
  top: 40%;
  transition-delay: 0.4s;
}

.navigable-page-tile:nth-child(4) {
  top: 60%;
  transition-delay: 0.6s;
}

.navigable-page-tile:nth-child(5) {
  top: 80%;
  transition-delay: 0.8s;
}

.navigable-page-tile.masking {
  width: 100%;
  transition-delay: 0s;
}

.loader--active __icon {
  opacity: 1;
  transition: opacity 0.5s 1.4s ease;
}

.loader--active __tile {
  width: 100%;
}

.navigable-page-tile.masking:nth-child(0) {
  transition-delay: -0.2s;
}

.navigable-page-tile.masking:nth-child(1) {
  transition-delay: 0s;
}

.navigable-page-tile.masking:nth-child(2) {
  transition-delay: 0.2s;
}

.navigable-page-tile.masking:nth-child(3) {
  transition-delay: 0.4s;
}

.navigable-page-tile.masking:nth-child(4) {
  transition-delay: 0.6s;
}

.navigable-page-tile.masking:nth-child(5) {
  transition-delay: 0.8s;
}
