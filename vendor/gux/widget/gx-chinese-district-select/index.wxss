@import '/vendor/gux/gux.wxss';

.dialog {
  padding: 12px;
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.3);
  height: 100%;
}

.bottom-dialog {
  position: fixed; 
  width: 100%;
  bottom:0; 
  left:0; 
  z-index:1000;
  border-top-left-radius: 25px;
  border-top-right-radius: 25px;
  background:#fff;
}

.bottom-dialog-title {
  width:100%; 
  text-align: center;
  font-size: 20px;
  line-height: 32px;
}

.bottom-dialog-body {
  z-index:3000; 
  padding: 0 16px;
}

.bottom-dialog-body .arrow {
  position: relative;
  top: 6px;
  left: 6px;
  float: right; 
  width: 20px; 
  height: 20px;
}

.bottom-dialog-body .nav {
  line-height: 32px; 
  height: 32px; 
  font-size: 16px;
}