<view class="tab-bar">
  <view class="{{activeClass}}">
    <label class="{{activeIndex == index ? 'active' : ''}}" 
           bindtap="doNavigate" data-index="{{index}}"
           style="flex: 0 0 {{cssWidth}};"
           wx:for="{{navigators}}" wx:for-item="nav" wx:key="text">
      <text class="{{nav.icon}} {{activeIndex == index ? ('active-' + index) : ''}}"></text>
      <span>{{nav.text}}</span>
    </label>
    <span style="width: {{cssWidth}};"></span>
  </view>
