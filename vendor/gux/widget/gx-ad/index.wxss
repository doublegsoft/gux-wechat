.ad-container {
  width: 600rpx;
  padding: 60rpx;
  background: #fff;
  border-radius: 32rpx;
  position: fixed;
  left: 75rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 100
}

.ad-container .title {
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: bold;
  margin-bottom: 50rpx
}

.ad-container .content {
  font-size: 28rpx;
  line-height: 46rpx;
  text-align: center
}

.ad-container .tip {
  margin-top: 30rpx;
  font-size: 24rpx;
  line-height: 32rpx;
  text-align: center;
  color: #999
}

.ad-container .btns {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 60rpx
}

.ad-container .btns .btn {
  width: 216rpx;
  height: 80rpx;
  background: #eee;
  border-radius: 40rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  position: relative;
  margin-left: 32rpx
}

.ad-container .btns .btn:first-child {
  margin-left: 0
}

.ad-container .btns .btn.yellow {
  background-color: #ffda43
}

.ad-container .btns .btn button {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2;
  opacity: 0
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9;
  background-color: rgba(0, 0, 0, 0.6);
  opacity: 0;
  transition: all 0.4s
}

.mask.ani {
  opacity: 1
}