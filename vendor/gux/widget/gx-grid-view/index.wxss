@import '/vendor/gux/gux.wxss';

.no-more-data {
  color: #cdcdcd;
  text-align: center;
}

.loading {
  color: #cdcdcd;
  text-align: center;
}

.refreshing {
  color: #cdcdcd;
  height: 48px;
  text-align: center;
  display: flex;
  align-content: center;
}

.list-scroll {
  flex: 1;
  height: 100vh;
}
.list-scroll-auto {
  height: 1px;
}
.list-loading {
  margin: 10px 0;
  text-align: center;
}
.list-loading__text {
  font-size: 16px;
  color: #a6a6a6;
  line-height: 1;
}

scroll-view ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

.no-data {
  width: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.no-data-img {
  width: 274rpx;
  height: 214rpx;
}
