<scroll-view>
  <block wx:for="{{htmlElements}}" wx:for-item="el">
    <view wx:if="{{el.type == 'img'}}">
      <image mode="widthFix" src="{{el.src}}" style="width: 100%;height:100%"></image>
    </view>
    <view wx:elif="{{el.type == 'p'}}" style="{{el.style}}">
      {{el.text}}
    </view>
    <text wx:elif="{{el.type == 'h1'}}" class="h1">
      {{el.text}}
    </text>
    <text wx:elif="{{el.type == 'h2'}}" class="h2">
      {{el.text}}
    </text>
    <text wx:elif="{{el.type == 'h3'}}">
      {{el.text}}
    </text>
    <text wx:elif="{{el.type == 'h4'}}">
      {{el.text}}
    </text>
  </block>
</scroll-view>
