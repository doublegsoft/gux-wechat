@import '../../gux.wxss';

.dialog {
  padding: 12px;
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.3);
  height: 100%;
}

.bottom-dialog {
  position: fixed; 
  width: 100%;
  bottom:0; 
  left:0; 
  z-index:1000;
  border-top-left-radius: 25px;
  border-top-right-radius: 25px;
  background:#fff;
}

.bottom-dialog-title {
  width:100%; 
  text-align: center;
  font-size: 20px;
  line-height: 32px;
}

.bottom-dialog-body {
  padding: 0 16px;
  z-index:3000; 
}

.picker-content {
  flex-grow: 1;
  height: 200px;
}

.picker-line {
	display: flex;
	justify-content: center;
  align-items: center;
}

.line-item {
  margin: auto;
	overflow: hidden;
	text-overflow: ellipsis;
  white-space: nowrap;

}