@import "/app.wxss";

/* General styles */
page {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f8f8f8;
}

.receipt {
  width: 100%;
  background-color: #fff;
  padding: 32rpx;
}

.header {
  text-align: center;
  margin-bottom: 32rpx;
}

.logo {
  width: 150rpx;
  margin-bottom: 10rpx;
}

.date {
  font-size: 24rpx;
  color: #777;
}

.section {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
  border-bottom: 1rpx dashed #ddd;
}

.token-section {
  border-bottom: 1rpx dashed #ddd;
  padding: 20rpx 0;
  text-align: center;
}

.token-label {
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.token-box {
  border: 1rpx dashed #777;
  padding: 10rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.label {
  font-size: 24rpx;
  color: #555;
}

.value {
  font-size: 24rpx;
  font-weight: bold;
  color: #000;
}

.footer {
  text-align: center;
  margin-top: 30rpx;
}

.footer-logo {
  width: 150rpx;
}
