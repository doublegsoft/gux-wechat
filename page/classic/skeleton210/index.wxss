/* 根容器 */
.container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100vh;
  padding: 10px;
  background-color: #e9eef2;
}

/* 顶部导航栏 */
.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 0;
}

.back-button,
.menu-button {
  font-size: 24px;
  background: none;
  border: none;
}

/* 中间滚动区域 */
.middle-section {
  flex: 1;
  width: calc(100% - 20px);
  background-color: #000;
  border-radius: 15px;
  padding: 10px;
  margin: 10px 0;
}

.card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-radius: 10px;
  padding: 10px;
  margin-bottom: 10px;
}

.refresh-button,
.favorite-button {
  font-size: 24px;
  background: none;
  border: none;
}

.card-content {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}

.card-content text {
  font-size: 16px;
}

.next-button {
  align-self: flex-end;
  font-size: 24px;
  background: none;
  border: none;
  color: #fff;
}

/* 底部项目 */
.item-list {
  padding: 10px 0;
}

.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
}

.item-left {
  display: flex;
  align-items: center;
}

.item-text {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}

.sub-text {
  color: gray;
  font-size: 14px;
}

.item-buttons {
  display: flex;
  align-items: center;
}

.item-button {
  background: none;
  border: none;
  font-size: 18px;
  margin: 0 5px;
}

/* 底部导航 */
.bottom-nav {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
  border-radius: 25px;
  padding: 10px 0;
  position: sticky;
  bottom: 0;
}

.nav-button {
  font-size: 24px;
  background: none;
  border: none;
}
