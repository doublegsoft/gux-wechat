        <gx-heat-bar id="gxHeatBar" value="{{50}}" title="中等" startColor="#f9d423" endColor="#ff4e50"></gx-heat-bar>
      </view>
    </view>
    <view class="gx-row">
      <view class="gx-24-06 gx-pos-relative">
        <text class="gx-pos-absolute" style="bottom: 0;">防御力</text>
      </view>
      <view class="gx-24-18">
        <gx-heat-bar id="gxHeatBar" value="{{80}}" title="高等" startColor="#f9d423" endColor="#ff4e50"></gx-heat-bar>
      </view>
    </view>
    <view class="gx-row">
      <view class="gx-24-06 gx-pos-relative">
        <text class="gx-pos-absolute" style="bottom: 0;">攻击力</text>
      </view>
