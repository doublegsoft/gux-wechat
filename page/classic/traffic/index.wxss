/* traffic.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #0d3b66;
  height: 100vh;
  padding: 20px;
  color: white;
}

.router-image {
  width: 100px;
  height: 100px;
  margin-top: 20px;
}

.title {
  font-size: 20px;
  font-weight: bold;
  margin: 20px 0;
}

.item {
  width: 100%;
  max-width: 300px;
  margin: 10px 0;
  align-items: center;
  justify-content: space-between;
}

.device-name {
  flex: 1;
}

.traffic-amount {
  flex: 0 0 auto;
  margin-left: 10px;
}

.progress {
  flex: 1;
  height: 8px;
  background-color: #1e6091;
  border-radius: 4px;
  overflow: hidden;
  margin-left: 10px;
}

.progress-bar {
  height: 100%;
  background-color: #5bc0eb;
  border-radius: 4px;
}
