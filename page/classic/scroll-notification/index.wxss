.container {
  width: 100%;
  height: 50px;
  overflow: hidden; /* Ensure the container hides overflowing content */
  position: relative;
  border: 1px solid #ccc;
}

.scroll-view {
  width: 100%;
  height: 100%;
  white-space: nowrap; /* Keep the content in a single line for horizontal scroll */
}

.scroll-content {
  display: inline-block;
  line-height: 50px;
}
