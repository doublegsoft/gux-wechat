@import "/vendor/gux/gux.wxss";

view.content {
  margin: auto; 
  align-items: center; 
  justify-items: center;
  text-align: center;
}

view.theme-image {
  font-size: 128px; 
  color: var(--color-error);
}

button.primary {
  width: 80%; 
  height: 48px; 
  background-color: var(--color-error);
  color: white; 
  line-height: 32px; 
  font-size: 20px;
}

button.secondary {
  width: 80%; 
  height: 48px; 
  background-color: var(--color-error-lighter);
  color: var(--color-error); 
  line-height: 32px; 
  font-size: 20px;
}

text.title {
  font-size: 22px;
  text-align: center;
  display: block;
}

text.description {
  font-size: 18px;
  color: var(--color-text-secondary);
}