<view style="height: 100vh;">
  <view class="gx-d-flex" style="height: 75vh;">
    <view class="content">
      <!-- <view class="theme-image fas fa-times-circle"></view> -->
      <image src="{{image}}" mode="aspectFit"></image>
      <view style="margin-top: 16px">
        <text class="title">{{title}}</text>
        <text class="description">{{description}}</text>
      </view>
    </view>
  </view>
  <button class="primary" bind:tap="gotoBack">返回重试</button>
  <button class="secondary" bind:tap="gotoHome" style="margin-top: 16px;">返回首页</button>
</view>